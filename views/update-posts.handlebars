<section class="card" class="post" data-post-id="{{id}}">
  <div>
    <label for="post-title">Title:</label>
    <input class="form-input" type="text" id="title" placeholder="{{title}}" />
  </div>
  <div>
    <label for="post-content">Content:</label>
    <input
      class="form-input"
      type="text"
      id="content"
      placeholder="{{content}}"
    />
  </div>

  <button class="update-post-button">Update Post</button>
  <button class="delete-post-button">Delete Post</button>
</section>

<div id="message" style="display: none;">
    <p>Please provide both a title and content</p>
  <div>

<script src="/js/updatePost.js"></script>
<script src="/js/deletePost.js"></script>